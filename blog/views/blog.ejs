<%- include layout/headder %>
	
<body>
<!-- banner-body -->
	<div class="banner-body">
		<div class="container">
			<div class="banner-body-content">
			<%- include layout/nav %>
			<div class="col-xs-9 banner-body-right">
				<div class="gallery-head">
					<h5><% if(user_name){ %><%= user_name+" " %><% } %>Blog</h5>
					<p>Some articles that have benefited a lot.</p>
				</div>
				<div class="blog">
					<% if(posts.length==0){ %>
						<div class="alert alert-warning" role="alert">
							<strong>Prompt!</strong> No article.
						</div>
					<% }else{ %>
						<% posts.forEach(function(post, index){ %>
						<div class="blog-grid">
							<div class="col-xs-4 blog-grid-left">
								<a href="/blog/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><img src="/images/1.jpg" alt=" " class="img-responsive"></a>
							</div>
							<div class="col-xs-8 blog-grid-right">
								<h4><a href="/blog/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h4>
								<p style="margin: 0;"><a href="/blog/<%= post.name %>" style="color: #666;"><%= post.name %></a><span style="margin-left: 25px">time:<%= post.time.minute %></span></p>
								<p><%= post.brief %></p>
								<% if(user && (user.name == post.name) && user_name){ %>
								<p style="text-align: right;"><a href="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" style="font-size: 12px;color: #666;padding: 0 10px;">编辑</a>|<a href="/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>" style="font-size: 12px;color: #666;padding: 0 10px;">删除</a></p>
								<% } %>
							</div>
							<div class="clearfix"> </div>
						</div>
						<% }) %>
					<% } %>
				</div>
				<div style="text-align: center;">
                    <ul class="pagination">
                            <li<% if(page == 1){ %> class="disabled"<% } %>><a href="<% if(page != 1){ %><%= '/blog/index?page='+(page-1) %><% } %>" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                            <%
                                switch(page){
                                case 1:
                                  var nextall = page+5;
                                  var pverall = 1;
                                  break;
                                case 2:
                                  var nextall = page+4;
                                  var pverall = 1;
                                  break;
                                case total-1:
                                  var nextall = page+2;
                                  var pverall = page-3;
                                  break;
                                case total-2:
                                  var nextall = page+3;
                                  var pverall = page-2;
                                  break;
                                case total:
                                  var nextall = page+1;
                                  var pverall = page-4;
                                  break;
                                default:
                                  var nextall = page+3;
                                  var pverall = page-2;
                                };
                                if(total<5){
                                  nextall = total+1;
                                  pverall = 1;
                                }
                                for(var i=pverall; i<nextall; i++){
                            %>
                                <li<% if(page == i){ %> class="active"<% } %>><a href="<% if(page == i){ %>javascript:;<% }else{ %><%= '/blog/index?page='+i %><% } %>"><%= i %><% if(page == i){ %> <span class="sr-only">(current)</span><% } %></a></li>
                            <% } %>
                            <li<% if(page == total){ %> class="disabled"<% } %>><a href="<% if(page != total){ %><%= '/blog/index?page='+(parseInt(page)+1) %><% } %>" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                    </ul>
                </div>
				
				
				<div class="msg-text-bottom">
